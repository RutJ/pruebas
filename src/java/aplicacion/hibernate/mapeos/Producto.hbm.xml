<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="aplicacion.modelo.dominio.Producto" catalog="dbjugueteria" table="Producto"
         optimistic-lock="version">
        <id name="codigo" type="string">
            <column name="prod_codigo" length="12"/>
            <generator class="assigned"/>   
        </id>
            
        <property name="nombreProducto" type="string">
            <column name="prod_nombre_producto" length="18" not-null="true"/>
        </property>
            
        <property name="sector" type="string">
            <column name="prod_sector" length="35" not-null="true"/>
        </property>
            
        <property name="precio" type="float">
            <column name="prod_precio" not-null="true"/>
        </property>
            
        <property name="stock" type="short">
            <column name="prod_stock" not-null="true"/>
        </property>
            
        <property name="material" type="string">
            <column name="cod_nombre_producto" length="30" not-null="true"/>
        </property>
            
        <property name="marca" type="string">
            <column name="prod_marca" length="15" not-null="true"/>
        </property>
            
        <property name="origen" type="string">
            <column name="prod_origen" length="12" not-null="true"/>
        </property>
            
        <property name="prodOferta" type="boolean">
            <column name="prod_producto_oferta" not-null="true"/>
        </property>
            
        <property name="dimension" type="string">
            <column name="prod_dimmension" length="12" not-null="true"/>
        </property>
            
        <property name="imagen" type="string">
            <column name="prod_imagen" length="25" not-null="true"/>
        </property>  
        
  </class>
</hibernate-mapping>
